<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render template: 'users/index' %>
      </section>
    </aside>
  </div>
<% else %>

  <div class="center jumbotron">

    <div class="welcome">

      <div id="logo">
        <%= link_to image_tag("logo.png", alt: "MediLocus logo", height: "150", width: "150"), '#' %> 
      </div>

      <div id="welcome-text">

        <h1> Welcome to MediLocus</h1>

        <h2> <strong> An exclusive P2P marketplace to buy and sell medicines; Anytime; Anywhere. </strong> </h2>
      </div>
      <%= link_to "Sign Up - it's Free!", '/users/sign_up' , class: "btn btn-lg btn-primary" %>
    </div>

  </div>
<% end %>
